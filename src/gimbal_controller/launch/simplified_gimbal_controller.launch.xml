<?xml version="1.0"?>
<launch>
  <!-- 简化云台控制器启动文件 -->
  <!-- 只启动云台控制器，不管理串口通信 -->
  
  <arg name="config_file" default="$(find-pkg-share gimbal_controller)/config/simplified_gimbal_config.yaml" description="配置文件路径"/>
  
  <!-- 简化云台控制节点 -->
  <node pkg="gimbal_controller" exec="simplified_gimbal_controller_node" name="simplified_gimbal_controller" output="screen">
    <param from="$(var config_file)"/>
  </node>
  
</launch>
